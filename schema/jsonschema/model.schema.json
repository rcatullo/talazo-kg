{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Talazoparib Resistance Knowledge Graph Relation Schema",
  "description": "JSON Schema for validating extracted relations from oncology literature",
    "type": "object",
  "required": ["subj", "subj_type", "rel", "obj", "obj_type", "pmid", "evidence"],
    "properties": {
    "subj": {
      "type": "string",
      "description": "Subject entity identifier or name"
    },
    "subj_type": {
      "enum": ["Gene", "Chemical", "Mutation", "Disease", "Phenotype", "Pathway", "Model", "Finding"],
      "description": "Type of the subject entity"
    },
    "obj": {
      "type": "string",
      "description": "Object entity identifier or name"
    },
    "obj_type": {
      "enum": ["Gene", "Chemical", "Mutation", "Disease", "Phenotype", "Pathway", "Model", "Finding"],
      "description": "Type of the object entity"
    },
    "rel": {
      "enum": [
        "confers_resistance_to",
        "sensitizes_to",
        "predicts_response_to",
        "prognostic_biomarker_in",
        "predictive_biomarker_for",
        "driver_in",
        "tumor_suppressor_in",
        "upregulated_in_resistance",
        "downregulated_in_resistance",
        "correlates_with_survival",
        "synergizes_with",
        "overcomes_resistance_with",
        "sequential_therapy_after",
        "physically_interacts_with",
        "co_expressed_with",
        "synthetic_lethal_with",
        "activates",
        "is_essential_for",
        "bypasses",
        "approved_for",
        "in_trials_for",
        "resistance_emerges_in",
        "inhibits",
        "targets",
        "observed_in_cell_line",
        "observed_in_pdx",
        "observed_in_patient",
        "consistent_across_models"
      ],
      "description": "Relation/predicate type"
    },
    "pmid": {
      "type": "string",
      "pattern": "^[0-9]+$",
      "description": "PubMed ID of source publication"
    },
        "evidence": {
            "type": "object",
      "required": ["confidence", "sentence_span"],
            "properties": {
        "confidence": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Confidence score of the extraction (0-1)"
        },
        "sentence_span": {
          "type": "array",
          "items": {
            "type": "integer"
          },
          "minItems": 2,
          "maxItems": 2,
          "description": "Character span [start, end] of the evidence sentence"
        },
        "section": {
          "type": "string",
          "description": "Section of paper where evidence was found"
        },
        "extractor": {
          "enum": ["LLM", "rule", "human"],
          "description": "Method used for extraction"
        },
        "eco_code": {
          "type": "string",
          "description": "Evidence & Conclusion Ontology code"
        }
      }
    },
    "context": {
      "type": "object",
      "description": "Additional context properties for the relation",
      "properties": {
        "mechanism": {
          "type": "string",
          "description": "Mechanistic detail of the relation"
        },
        "cancer_type": {
          "type": "string",
          "description": "Specific cancer type or subtype"
        },
        "biomarker_status": {
          "type": "string",
          "enum": ["FDA-approved", "investigational", "validated", "exploratory"],
          "description": "Validation status of biomarker"
        },
        "resistance_type": {
          "type": "string",
          "enum": ["intrinsic", "acquired"],
          "description": "Type of resistance mechanism"
        },
        "fold_change": {
          "type": "number",
          "description": "Fold change value for expression changes"
        },
        "p_value": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Statistical p-value"
        },
        "hazard_ratio": {
          "type": "number",
          "description": "Hazard ratio for survival analyses"
        },
        "confidence_interval": {
          "type": "string",
          "description": "95% confidence interval (e.g., '1.5-2.9')"
        },
        "combination_index": {
          "type": "number",
          "description": "Combination index for drug synergy (<1 = synergistic)"
        },
        "ic50": {
          "type": "string",
          "description": "IC50 value with units (e.g., '10nM')"
        },
        "binding_affinity": {
          "type": "string",
          "description": "Binding affinity (Kd) with units"
        },
        "correlation_coefficient": {
          "type": "number",
          "minimum": -1,
          "maximum": 1,
          "description": "Correlation coefficient (r)"
        },
        "trial_phase": {
          "type": "string",
          "enum": ["phase_I", "phase_II", "phase_III", "phase_IV"],
          "description": "Clinical trial phase"
        },
        "nct_number": {
          "type": "string",
          "pattern": "^NCT[0-9]{8}$",
          "description": "ClinicalTrials.gov NCT number"
        },
        "line_of_therapy": {
          "type": "string",
          "description": "Line of therapy (e.g., 'first-line', 'second-line')"
        },
        "therapy_type": {
          "type": "string",
          "enum": ["monotherapy", "combination"],
          "description": "Type of therapy administration"
        },
        "drug_concentration": {
          "type": "string",
          "description": "Drug concentration used in experiment"
        },
        "time_point": {
          "type": "string",
          "description": "Time point of observation"
        },
        "sample_size": {
          "type": "integer",
          "minimum": 1,
          "description": "Number of samples/patients"
        },
        "cell_line": {
          "type": "string",
          "description": "Specific cell line used"
        },
        "model_system": {
          "type": "string",
          "description": "Experimental model system"
        },
        "detection_method": {
          "type": "string",
          "description": "Method used to detect interaction or effect"
        },
        "validation_level": {
          "type": "string",
          "enum": ["preclinical", "clinical", "FDA-approved", "exploratory"],
          "description": "Level of validation for finding"
        }
            }
        }
    }
}
  